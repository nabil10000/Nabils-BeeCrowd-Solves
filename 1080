#include <stdio.h>

int main() {
    int numbers[100];
    int max_value = 0;
    int max_position = 0;

    // Read 100 integer numbers
    for (int i = 0; i < 100; ++i) {
        scanf("%d", &numbers[i]);

        // Track the highest number and its position
        if (numbers[i] > max_value) {
            max_value = numbers[i];
            max_position = i + 1;
        }
    }

    // Print the highest number and its position
    printf("%d\n", max_value);
    printf("%d\n", max_position);

    return 0;
}
